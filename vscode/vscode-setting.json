{
    "window.newWindowDimensions": "inherit",
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
    // 字体
    "editor.fontFamily": "Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
    "editor.renderWhitespace": "boundary",
    // 控制行高。使用 0 通过字号计算行高。
    "editor.lineHeight": 14,
    // 显示控制字符
    "editor.renderControlCharacters": true,
    // 字号
    "editor.fontSize": 11,
    // 编辑区缩览
    "editor.minimap.enabled": false,
    // 控制编辑器是否在滚动时使用动画
    "editor.smoothScrolling": false,
    // 启动新建文档
    "workbench.startupEditor": "newUntitledFile",
    // 编辑器颜色主题
    // "workbench.colorTheme": "Default High Contrast"
    "workbench.colorTheme": "Default Light+",
    // 控制编辑器标签的格式。修改这项设置会让文件的路径更容易理解：
    // - short: "parent"
    // - medium: "workspace/src/parent"
    // - long: "/home/user/workspace/src/parent"
    // - default: 当与另一选项卡标题相同时为 ".../parent"。选项卡被禁用时则为相对工作区路径
    "workbench.editor.labelFormat": "short",
    // 控制编辑器的选项卡关闭按钮的位置，或当设置为 "off" 时禁用关闭它们。
    "workbench.editor.tabCloseButton": "left",
    // 控制工作台中字体的渲染方式
    // - default: 次像素平滑字体。将在大多数非 retina 显示器上显示最清晰的文字
    // - antialiased: 进行像素而不是次像素级别的字体平滑。可能会导致字体整体显示得更细
    // - none: 禁用字体平滑。将显示边缘粗糙、有锯齿的文字
    "workbench.fontAliasing": "antialiased",
    // 控制 Quick Open 是否应在失去焦点时自动关闭。
    "workbench.quickOpen.closeOnFocusLost": false,
    "explorer.confirmDelete": false,
    // php
    "php.suggest.basic": false,
    // Java Perform settings
    "java.debug.logLevel": "info",
    "java.trace.server": "messages",
    "java.referencesCodeLens.enabled": true,
    "java.signatureHelp.enabled": true,
    "java.implementationsCodeLens.enabled": true,
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.configuration.maven.userSettings": "/Users/yakir/Developer/server/maven/conf/settings.xml",
    "java.home": "/Library/Java/JavaVirtualMachines/jdk1.8.0_162.jdk/Contents/Home",
    "extensions.ignoreRecommendations": false,
    "files.defaultLanguage": "jsonc",
    // 文件类型和语言模式映射
    "files.associations": {
        "*.properties": "properties",
        "*.conf": "properties",
        "*.options": "properties",
        "*.json": "jsonc"
    },
    // markdown折行关闭 
    "[markdown]": {
        "editor.wordWrap": "off",
        "editor.quickSuggestions": true
    },
    // 控制 Markdown 预览中使用的字号(以像素为单位)。
    "markdown.preview.fontSize": 12,
    // markdown预览行高
    "markdown.preview.lineHeight": 1,
    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont,'Source Code Pro', 'Segoe WPC', 'Segoe UI', 'HelveticaNeue-Light', 'Ubuntu', 'Droid Sans', sans-serif"
}